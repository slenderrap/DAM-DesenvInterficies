<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">
   <children>
      <HBox alignment="CENTER" fillHeight="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="labelStyle" alignment="CENTER" contentDisplay="CENTER" text="ABC">
                     <font>
                        <Font size="32.0" />
                     </font>
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="buttonChange0" mnemonicParsing="false" onAction="#setStyle0" prefHeight="25.0" text="Style 0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="buttonChange1" mnemonicParsing="false" onAction="#setStyle1" prefHeight="25.0" text="Style 1" />
               </children>
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="buttonBorderRed" mnemonicParsing="false" onAction="#setBorderRed" prefHeight="25.0" style="-fx-border-color: blue; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-color: rgba(0,0,0,0);" text="Border Red" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="8.0" top="8.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
